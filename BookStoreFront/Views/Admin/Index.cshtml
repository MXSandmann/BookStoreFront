@model ICollection<BookStoreFront.Models.Responses.Book.BookDTO>;

<div class="d-flex flex-row">
    <a class="btn btn-success" asp-action="CreateBook">Create new book</a>
    <a class="btn btn-success" asp-action="CreateAutor">Create new autor</a>
    <a class="btn btn-success" asp-action="CreateGenre">Create new genre</a>
</div>
<div class="d-flex flex-row-reverse">
    <a class="btn btn-info" asp-action="GetAllAutors">Show all autors</a>
    <a class="btn btn-info" asp-action="GetAllGenres">Show all genres</a>
</div>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Title
        </th>
        <th>
            Autor
        </th>
        <th>
            Genre
        </th>
        <th>
            Price
        </th>
        <th>
            Pages
        </th>
        <th>
            Year
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @String.Join(';', item.Autors.Select(el => el.Name + " " + el.Surname))
            </td>
            <td>
                @String.Join(';', item.Genres)
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.PagesCount
            </td>
            <td>
                @item.Year
            </td>
            <td>
                @*<button class="btn btn-primary">Edit</button>*@
                @*<button class="btn btn-danger">Delete </button>*@
                <div>
                    <a class="btn btn-primary" asp-action="UpdateBook" asp-route-id="@item.ID">Edit </a>

                </div>
                <div>
                    <a class="btn btn-danger" asp-action="DeleteBook">Delete</a>
                </div>
            </td>
        </tr>
    }
</table>
